<h1> Job Posts! </h1>

<ul class="accordion" data-accordion>
  <% @posts.each do |post| %>
    <li class="accordion-item" data-accordion-item>
      <a href="#"> <%= post.chef.restaurant_name %></a>
        <div class="accordion-content" data-tab-content >
          <table>
            <thead>
              <tr>
                <th width="200">Address</th>
                <th width="100">Date</th>
                <th width="100">Start Time</th>
                <th width="100">End Time</th>
                <th width="100">Hourly Wage</th>
                <th width="200">Description</th>
                <% if cook_signed_in? %>
                  <th width="200">Options</th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= post.chef.full_address %></td>
                <td><%= post.date %></td>
                <td><%= post.start_time %></td>
                <td><%= post.end_time %></td>
                <td><%= post.wage %></td>
                <td><% if post.description.blank? %>
                  None Provided
                <% else %>
                  <%= post.description %>
                <% end %></td>
                <% if cook_signed_in? %>
                  <td><%= button_to "Sign Up for this Job", post_signups_path(post), method: :post %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
        <% end %>
      </li>
</ul>

<% if chef_signed_in? %>
  <%= button_to "Create New Job Post", new_post_path %>
<% end %>
