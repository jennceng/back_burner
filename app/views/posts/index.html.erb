<h1> Job Posts! </h1>

<% @posts.each do |post| %>
  Restaurant: <%= post.chef.restaurant_name %>
  Address: <%= post.chef.full_address %>
  Date: <%= post.date %>
  Start Time: <%= post.start_time %>
  End Time: <%= post.end_time %>
  Hourly Wage: <%= post.wage %>
  Description:
    <% if post.description.blank? %>
      None Provided
    <% else %>
      <%= post.description %>
    <% end %>
  <% if post.chef == current_chef %>
    <%= button_to "Update Post", edit_post_path(post), method: :get %>
  <% end %>
<% end %>

<% if chef_signed_in? %>
  <%= render 'form' %>
<% end %>
